                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <p style="margin-top: 28px;font-weight: 600;margin-left: 38px;font-family: Segoe UI, Helvetica, sans-serif;color: #353535;font-size: 12px;">
                                                            Hello
                                                            @Model.FirstName @Model.LastName
                                                            ,
                                                        </p>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <table>
                                                            <tbody>
                                                                <tr>
                                                                    <td>
                                                                        <p style="vertical-align: bottom; margin-top: 12px; color: #353535;font-family: Segoe UI, Helvetica, sans-serif; margin-left: 34px; margin-bottom: 12px; font-size: 12px;">
